<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Admin</title>
<link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.js"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">
  <script type="text/javascript" src="vendor/bootstrap/js/jquery-3.3.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</head>

<body>
  <nav class="nav navbar bg-dark">
	<span class="float-left">
		<a class="navbar-brand ml-lg-3" href="#">
		  <img src="../img/logo.png" alt="logo" style="width:200px;">
		</a>
	</span>
    <span class="float-right">
		<form class="form-inline" action="">
			<input class="form-control mr-sm-2" type="text" placeholder="Search">
			<button class="btn btn-warning" type="submit">Search</button>
			<a class="nav-link text-light" href="#"><i class="fas fa-user-check fa-2x"></i> <strong>My Account</strong></a>
		</form>
	</span>
  </nav>
  
  <div class="container-fluid">
	<div class="row">
    <div class="col-lg-2">
      <nav class="navbar bg-light">

        <!-- Links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <div class="row">
              <div class="col-lg-4">
                <i class="fas fa-home fa-2x"></i>
              </div>
              <div class="col-lg-7">
                <a class="nav-link col-lg-8" id="du-lieu-home" href="#"> Home</a>
              </div>
            </div>
          </li>

          <li class="nav-item">
            <div class="row">
              <div class="col-lg-4">
                <i class="fas fa-cart-arrow-down fa-2x"></i>
              </div>
              <div class="col-lg-7">
                <a class="nav-link col-lg-8" id="du-lieu-orders" href="#"> Orders</a>
              </div>
            </div>
          </li>

          <li class="nav-item">
            <div class="row">
              <div class="col-lg-4">
                <a class="text-dark"><i class="fas fa-cookie fa-2x"></i></a>
              </div>
              <div class="col-lg-7">
                <a class="nav-link col-lg-8" id="du-lieu-products" href="#"> Product</a>
              </div>
            </div>
          </li>

          <li class="nav-item">
            <div class="row">
              <div class="col-lg-4">
                <i class="fas fa-user-tag fa-2x"></i>
              </div>
              <div class="col-lg-7">
                <a class="nav-link col-lg-8" id="du-lieu-customers" href="#"> Customers</a>
              </div>
            </div>
          </li>

          <li class="nav-item">
            <div class="row">
              <div class="col-lg-4">
				<i class="fas fa-cog fa-2x"></i>
              </div>
              <div class="col-lg-7">
                <a class="nav-link col-lg-8" href="#">Settings</a>
              </div>
            </div>
          </li>

        </ul>

      </nav>
    </div>


    <div class="col-lg-10 bg-light">

      <div id="noidung"></div>
      <div id="noidung_orders"></div>
      <div id="noidung_products"></div>
      <div id="noidung_customers"></div>
      <!-- <div id="noidung_products"></div> -->
    </div>
  </div>
  </div>
  
  
  

  <script type="text/javascript">
    $(document).ready(function() {
      $('#noidung').load('homeadmin');
      $('#du-lieu-home').click(function(e) {
        e.preventDefault();
        // $('#noidung').hide();
        $('#noidung_customers').hide();
         $('#noidung_orders').hide();
         $('#noidung_products').hide();
         $('#noidung').show();
        console.log($('#noidung').load('homeadmin'));
      });
    });

    $(document).ready(function() {
      $('#du-lieu-orders').click(function(e) {
        e.preventDefault();
        $('#noidung').hide();
        $('#noidung_customers').hide();
        $('#noidung_products').hide();
        $('#noidung_orders').show();
        console.log($('#noidung_orders').load('orders'));
      });
    });

    $(document).ready(function() {
      $('#du-lieu-customers').click(function(e) {
        e.preventDefault();
         $('#noidung').hide(),
         $('#noidung_orders').hide(),
         $('#noidung_products').hide();
         $('#noidung_customers').show();
        console.log($('#noidung_customers').load('customers'));
      });
    });

    $(document).ready(function() {
      $('#du-lieu-products').click(function(e) {
        e.preventDefault();
        $('#noidung').hide();
        $('#noidung_customers').hide();
        $('#noidung_orders').hide();
        $('#noidung_products').show();
        console.log($('#noidung_products').load('products'));
      });
    });
  </script>
</body>

</html>
